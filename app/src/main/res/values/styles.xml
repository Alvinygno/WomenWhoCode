<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
      <item name="android:actionBarStyle">@style/DarkActionBar</item>

      <!-- Support library compatibility -->
      <item name="actionBarStyle">@style/DarkActionBar</item>
  </style>

    <style name="DarkActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blackish</item>
        <item name="android:titleTextStyle">@style/DarkActionBar.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/blackish</item>
        <item name="titleTextStyle">@style/DarkActionBar.TitleTextStyle</item>
    </style>

    <style name="DarkActionBar.TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/whitish</item>
    </style>

    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/whitish</item>
    </style>




    <style name="MyCustomButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/states_button</item>
    </style>
    <style name="MyCustomButtonOther">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/states_button</item>
    </style>

    <style name="Multicolor_1">
        <item name="android:background">@drawable/layers_multicolor_border</item>
        <item name="android:textSize">16sp</item>
        <item name ="android:textColor">@android:color/black</item>

    </style>



</resources>
