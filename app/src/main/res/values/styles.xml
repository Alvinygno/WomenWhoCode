<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- =============================================================== -->
    <!-- Toolbar Styles - Stays Consistent -->
    <!-- =============================================================== -->

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This would set the toolbar's background color -->
        <item name="android:background">@color/blackish</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/whitish</item>
        <!-- android:actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/whitish</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
        <item name="android:titleTextStyle">@style/Toolbar.TitleText</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <!-- =============================================================== -->
    <!-- Item, Dialog, Activity Styles - Stays Consistent -->
    <!-- =============================================================== -->

    <style name="TextView.TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <style name="TextView.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <style name="TextView.RelativeDate" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@color/whitish</item>
    </style>

    <style name="TextView.DetailDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/whitish</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_details</item>
    </style>

    <style name="FollowButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:background">@drawable/follow_button</item>
    </style>

    <!-- TODO: this "could" switch based on theme -->
    <style name="TextView.TitleText.Notification" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/whitish</item>
    </style>

    <!-- =============================================================== -->
    <!-- Personalization, SignUp, LogIn Styles - Stays Consistent -->
    <!-- =============================================================== -->

    <style name="TextView.TitleText.Pf" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_large_pf_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <style name="page_background_bl">
        <item name="android:background">@color/blackish</item>
    </style>

    <style name="EditBoxStyle">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:textColor">@color/whitish</item>
    </style>

    <style name="button">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="landingPage" parent="Widget.AppCompat.Button">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
    </style>

    <style name="finalizeProfile" parent="Widget.AppCompat.Button">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textColor">@color/whitish</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
    </style>

    <style name="TextViewLabels">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.38</item>
        <item name="android:textSize">@dimen/text_normal_text_size</item>
    </style>

    <!-- =============================================================== -->
    <!-- Font References - Stays Consistent -->
    <!-- =============================================================== -->

    <style name="HeaderTextDefault" parent="android:TextAppearance">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
    </style>

    <!-- =============================================================== -->
    <!-- Needs to Switch Based on Theme Selected -->
    <!-- =============================================================== -->

    <style name="TextView.TitleText.Dark" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <style name="TextView.TitleText.FeatureHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <style name="TextView.Subtitle.Dark.Small" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.54</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_small_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <!-- background for posts and chat needs to be here! -->
    <!-- what are we changing at runtime that we should change here? -->

    <style name="BubbleTextView.ChatBody.OtherUser" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="BubbleTextView.ChatBody.CurrentUser" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/whitish</item>
    </style>

    <style name="TextView.AwesomeCount.SmallText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mediumGray</item>
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- TODO: These may not change - needs verification -->

    <style name="TextView.RelativeDate.Dark" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.38</item>
    </style>

    <style name="TextView.RelativeDate.SmallText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_small_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.38</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
