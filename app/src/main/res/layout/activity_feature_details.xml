<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- action bar -->
    <include
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true"
        android:textSize="14sp"
        android:background="@color/blackish"
        android:textColor="@color/whitish"
        app:pstsDividerColor="@color/blackish"
        app:pstsIndicatorColor="@color/teal"
        app:pstsIndicatorHeight="4dp"
        app:pstsTabPaddingLeftRight="14dp"/>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/cvFeatureDetails"
        card_view:cardCornerRadius="1.5dp"
        card_view:cardElevation="0.01dp">

        <!-- FIXME: consider making this it's own fragment -->
        <RelativeLayout
            android:id="@+id/rlFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/detail_padding_top"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingBottom="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding">

            <ImageView
                android:id="@+id/ivFeatureImage"
                android:layout_width="@dimen/image_view_height_width"
                android:layout_height="@dimen/image_view_height_width"
                android:padding="@dimen/icon_padding"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/tvFeatureTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivFeatureImage"
                android:padding="@dimen/icon_padding"
                style="@style/TextView.TitleText"/>

            <TextView
                android:id="@+id/tvSubscriberCount"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/icon_padding"
                android:paddingLeft="@dimen/icon_padding"
                android:paddingRight="@dimen/icon_padding"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFeatureTitle"
                android:layout_toRightOf="@+id/ivFeatureImage"
                style="@style/TextView.Subtitle"/>

            <TextView
                android:id="@+id/tvFeatureDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/description_padding_top"
                android:paddingBottom="@dimen/description_padding_bottom"
                android:paddingLeft="@dimen/icon_padding"
                android:paddingRight="@dimen/icon_padding"
                android:layout_below="@+id/tvSubscriberCount"
                android:layout_toRightOf="@+id/ivFeatureImage"
                style="@style/TextView.DetailDescription"/>

            <Button
                android:id="@+id/btnSubscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFeatureDescription"
                android:layout_toRightOf="@+id/ivFeatureImage"
                android:layout_margin="@dimen/icon_padding"
                android:onClick="onSubscribe"
                style="@style/FollowButton"
                android:text="Follow" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

    <FrameLayout
        android:id="@+id/flFeatureContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlEvents"
        android:layout_centerHorizontal="true"></FrameLayout>
</LinearLayout>

