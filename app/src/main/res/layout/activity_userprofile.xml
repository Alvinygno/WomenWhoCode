<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
style="@style/page_background_bl"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reviewProfile"
        android:id="@+id/txtReview"
        android:focusable="false"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:textColor="@color/whitish"
        android:layout_centerHorizontal="true" />

    <com.example.womenwhocode.womenwhocode.utils.RoundedImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/ivphoto"
        android:src="@drawable/ic_placeholder"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera"
        android:id="@+id/btnCamera"
        android:onClick="onLaunchCamera"
        android:background="@color/blackish"
        android:layout_below="@+id/ivphoto"
        android:layout_toRightOf="@+id/tvEmail"
        android:layout_toEndOf="@+id/tvEmail" />

    <ImageButton
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fileimage"
        android:background="@color/blackish"
        android:id="@+id/btnUpload"
        android:onClick="onSelectImage"
        android:layout_below="@+id/ivphoto"
        android:layout_toRightOf="@+id/tvNetwrks"
        android:layout_toEndOf="@+id/tvNetwrks" />
<TextView
    style="@style/TextViewLabels"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvName"
    android:text="@string/tvName"
    android:layout_below="@id/btnUpload"

    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp" />
    <EditText
        style="@style/EditBoxStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true" />
    <TextView
        style="@style/TextViewLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:text="@string/tvEmail"
        android:layout_below="@id/txtName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp" />
    <EditText
        style="@style/EditBoxStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="email address"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/tvEmail"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false" />
    <TextView
        style="@style/TextViewLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvJob"
        android:text="@string/tvJob"
        android:layout_below="@+id/txtEmail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp" />
    <EditText
        style="@style/EditBoxStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/etJob"
        android:layout_below="@+id/tvJob"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
       />

    <TextView
        style="@style/TextViewLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNetwrks"
        android:text="@string/tvNetwrks"
        android:layout_below="@+id/etJob"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp" />
    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/spnNetwork"
        android:layout_below="@+id/tvNetwrks"
        android:layout_alignParentLeft="false"
        android:prompt="@string/spinnerPrompt"
        android:minHeight="20dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="40dp" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText" />

    <Button
        style="@style/button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Finalize Profile"
        android:id="@+id/btnFinalize"
        android:onClick="OnFinalize"
        android:layout_below="@+id/spnNetwork"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false" />


</RelativeLayout>
