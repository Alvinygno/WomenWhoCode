<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
android:background="@drawable/shape_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reviewProfile"
        android:id="@+id/txtReview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:focusable="false"
        android:textSize="@dimen/abc_text_size_large_material" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:id="@+id/txtName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="210dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email address"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/txtName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:inputType="textPassword"
        android:id="@+id/txtPwd"
        android:layout_below="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp" />

    <Button
        style="@style/MyCustomButtonOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalize Profile"
        android:id="@+id/txtFinalize"
        android:onClick="OnFinalize"
        android:layout_below="@+id/txtPwd"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail" />

    <Button
        style="@style/MyCustomButtonOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/btnUpload"
        android:onClick="onSelectImage"
        android:layout_toLeftOf="@+id/txtReview"
        android:layout_toStartOf="@+id/txtReview"
        android:layout_below="@+id/txtReview" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivphoto"
        android:src="@drawable/wwc_image"
        android:layout_alignLeft="@+id/txtReview"
        android:layout_alignStart="@+id/txtReview"
        android:layout_alignRight="@+id/txtReview"
        android:layout_alignEnd="@+id/txtReview"
        android:layout_alignBottom="@+id/txtName"
        android:layout_below="@+id/txtReview"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
