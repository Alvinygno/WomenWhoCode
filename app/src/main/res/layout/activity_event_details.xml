<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/pbLoading"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:pstsShouldExpand="true"
            app:pstsTextAllCaps="true"
            android:textSize="14sp"
            android:background="@color/blackish"
            android:textColor="@color/whitish"
            app:pstsDividerColor="@color/blackish"
            app:pstsIndicatorColor="@color/teal"
            app:pstsIndicatorHeight="4dp"
            app:pstsTabPaddingLeftRight="14dp"/>

    <!-- FIXME: consider making this it's own fragment -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/rlEvents"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEventTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Security with Expert" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEventDate"
            android:layout_below="@id/tvEventTitle"
            android:layout_alignParentLeft="true"
            android:text="Oct 29, 2015" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEventTime"
            android:layout_toRightOf="@+id/tvEventDate"
            android:layout_below="@id/tvEventTitle"
            android:text="at 7pm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEventVenue"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvEventDate"
            android:text="at Slack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEventUrl"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvEventVenue"
            android:autoLink="all"
            android:linksClickable="true"
            android:text="some url" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubscribeCount"
            android:layout_below="@id/tvEventUrl"
            android:layout_alignParentLeft="true"
            android:text="260 Subscribed" />

        <!-- might want to make this linear layout for the animation piece -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubscribeIcon"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvSubscribeCount"
            android:text="subscribe"
            android:onClick="onSubscribe"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flEventContainer"
        android:layout_below="@+id/rlEvents"
        android:layout_centerHorizontal="true"></FrameLayout>
</LinearLayout>

