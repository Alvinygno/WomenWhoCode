<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    style="@style/page_background_bl"
    android:padding="15dp">


    <Button
        style="@style/button"
        android:drawableLeft="@drawable/ic_github"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginWithGitHub"
        android:id="@+id/button"
        android:layout_above="@+id/btnEmailLogin" />

    <Button
        style="@style/button"
        android:drawableLeft="@drawable/ic_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginWithEmail"
        android:id="@+id/btnEmailLogin"
        android:onClick="loginWithEmail"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

</RelativeLayout>